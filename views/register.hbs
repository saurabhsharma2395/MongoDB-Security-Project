<link rel="stylesheet" href="/stylesheets/formStyle.css" />
<h1>Register</h1>

<form method="POST" action="/register">

    <div class="form-group">
        <label>First Name:</label>
        <input class="form-control" name="first_name" type="text" value="{{formData.first_name}}">
        {{#if errors.first_name}}
            <p class="error">Error: {{errors.first_name}}</p>
        {{/if}}
    </div>

    <div class="form-group">
        <label>Last Name:</label>
        <input class="form-control" name="last_name" type="text" value="{{formData.last_name}}">
        {{#if errors.last_name}}
            <p class="error">Error: {{errors.last_name}}</p>
        {{/if}}
    </div>

    <div class="form-group">
        <label>Email:</label>
        <input class="form-control" name="email" type="email" value="{{formData.email}}">
        {{#if errors.email}}
            <p class="error">Error: {{errors.email}}</p>
        {{/if}}
    </div>

    <div class="form-group">
        <label>Password:</label>
        <input class="form-control" name="password" type="password">
        {{#if errors.password}}
            <p class="error">Error: {{errors.password}}</p>
        {{/if}}
    </div>

    <input class="btn btn-primary" type="submit" value="Register" />
</form>
