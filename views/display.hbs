<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <main>
        {{#if restaurants_data}}
            <div id="headmessage">
                <h2>Restaurants List</h2>
            </div>
            <div id="restaurantGrid">
                {{#each restaurants_data}}
                    <div class="restaurant-card">
                        <h4>{{name}}</h4>
                        <p>{{cuisine}}</p>
                        <p>{{address.building}} {{address.street}}, {{address.zipcode}}</p>
                        <!-- Add more details as needed -->
                    </div>
                {{/each}}
            </div>
            <!-- Marker for infinite scrolling -->
            <div id="end-marker" style="display: none;"></div>
        {{else}}
            <div id="message">
                <p>No restaurants available.</p>
            </div>
        {{/if}}
    </main>

    <!-- AJAX Request for Infinite Scrolling -->
   <script>
    var page = 2; // Start from the second page
    var isFetching = false; // Flag to indicate if AJAX request is in progress

    $(window).scroll(function() {
        if (isFetching) return; // Prevent multiple simultaneous requests

        var distanceFromBottom = $(document).height() - $(window).height() - $(window).scrollTop();
        var threshold = 10; // Adjust threshold as needed

        if (distanceFromBottom < threshold) {
            console.log('Scrolled near the bottom');
            isFetching = true; // Set the flag
            fetchRestaurants();
        }
    });

    function fetchRestaurants() {
        $.ajax({
            url: '/api/restaurant?page=' + page,
            type: 'get',
            dataType: 'json',
            success: function(data) {
                if (data.restaurants_data && data.restaurants_data.length > 0) {
                    data.restaurants_data.forEach(function(restaurant) {
                        var card = '<div class="restaurant-card">' +
                            '<h4>' + restaurant.name + '</h4>' +
                            '<p>' + restaurant.cuisine + '</p>' +
                            '<p>' + restaurant.address.building + ' ' + restaurant.address.street + ', ' + restaurant.address.zipcode + '</p>' +
                            '</div>';
                        $('#restaurantGrid').append(card);
                    });
                    page++; // Increment the page number
                } else {
                    $('#end-marker').show(); // Show the marker if there's no more data
                }
                isFetching = false; // Reset the flag
            },
            error: function(error) {
                console.log('Error:', error);
                isFetching = false; // Reset the flag in case of error
                $('#end-marker').show(); // Show the marker in case of error
            }
        });
    }
</script>
</body>
</html>
